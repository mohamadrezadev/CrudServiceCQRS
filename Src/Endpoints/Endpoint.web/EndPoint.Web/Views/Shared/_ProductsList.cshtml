@model Application.Entities.Dtos.ProductDto;

<div class="w-full md:max-w-sm lg:max-w-md xl:max-w-lg bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
    <a href="#">
        <img class="w-full h-auto p-8 rounded-t-lg" src="@Model.imageURl" alt="product image" />
    </a>
    <div class="px-5 pb-5">
        <a href="#">
            <h5 class="text-xl font-semibold tracking-tight text-gray-900">@Model.Name</h5>
        </a>
        <article class="text-wrap ...">
            <p class="indent-8">@Model.Description</p>
        </article>
        <div class="flex items-center justify-between">
            <span class="text-3xl font-bold text-gray-900">@Model.Price</span>
        </div>
        <div class="flex items-center mt-3">
            <form asp-controller="Basket" asp-action="AddToBasket" method="post">
                <input type="hidden" value="@Model.Id" name="productId" />
                <input type="hidden" value="@ViewContext.HttpContext.Request.Path" name="returnUrl" />

                <input type="submit" value="AddToBasket" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 mx-auto w-full text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" />

            </form>
            @* <a href="#" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 mx-auto w-full text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">Add to cart</a> *@
        </div>
    </div>
</div>


